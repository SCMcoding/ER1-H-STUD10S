<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gray Dragon Display</title>
    <style>
        body {
            margin: 0;
            background-color: #222;
            color: white;
            overflow: hidden;
        }
        #dragon {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
        }
        #fire {
            position: absolute;
            width: 100px;
            height: 100px;
            background: radial-gradient(circle, orange, red);
            border-radius: 50%;
            opacity: 0;
            transition: opacity 0.3s;
        }
        #eye {
            position: absolute;
            width: 20px;
            height: 20px;
            background-color: red;
            border-radius: 50%;
            transition: transform 0.1s;
        }
    </style>
</head>
<body>
    <div id="dragon">
        <div id="eye" style="top: 10px; left: 20px;"></div>
        <div id="fire"></div>
        <img src="gray_dragon.png" alt="Gray Dragon">
    </div>
    <script>
        const eye = document.getElementById('eye');
        const fire = document.getElementById('fire');
        document.addEventListener('mousemove', (e) => {
            const x = e.clientX - window.innerWidth / 2;
            const y = e.clientY - window.innerHeight / 2;
            const angle = Math.atan2(y, x);
            eye.style.transform = `translate(${Math.cos(angle) * 10}px, ${Math.sin(angle) * 10}px)`;
            fire.style.left = `${e.clientX - 50}px`;
            fire.style.top = `${e.clientY - 50}px`;
            fire.style.opacity = 1;
        });
        document.addEventListener('mouseleave', () => {
            fire.style.opacity = 0;
        });
    </script>
</body>
</html>
